<%= turbo_frame_tag "nav-observatories" do %>
  <div class="py-lg-4">
    <div class="row <%= 'flex-column' if local_assigns[:mobile] %>">
    <% nav_observatories.each do |observatory| %>
      <div class="col-12 col-lg-3">
          <%= render NavLinkComponent.new(observatory[0], observatory_path(observatory[0]), target: "_top") %>
      </div>
    <% end %>
    </div>
  </div>
<% end %>
