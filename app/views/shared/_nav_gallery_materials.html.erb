<%= turbo_frame_tag "nav-gallery-materials-#{gallery.id}" do %>
  <div class="row ms-auto border-start border-light">
    <% albums[...1].each do |album| %>
      <div class="widget widget--card widget--info"
           style="display: flex; position: relative; margin-bottom: 1rem;">

        <div class="widget--info__meta--card" style="display: none;">
          <span></span>
        </div>
        <div class="widget--info__media-container"
             style="flex: 0 0 25%; min-width: 170px; margin-right: 14px;">
          <a href="#" class="widget--info__media"
             style="display: block; position: relative; height: 0; overflow: hidden; border-radius: 4px; padding-top: 56.25%; width: 100%; background: #ccc; box-shadow: inset 0 0 10px 0 rgba(0, 0, 0, 0.1);">
            <%= display_banner_image(album.banner, style: "position: absolute;top: 0;left: 0;width: 100%;height: 100%;object-fit: cover;") %>
          </a>
        </div>
        <div class="widget--info__text-container" style="flex: 1 0 0;position: relative;padding-bottom: 20px;">
          <% if false %>
            <div class="widget--info__header" style="font-size: 14px;line-height: 14px;letter-spacing: 0;color: #060606;text-transform: uppercase;margin-bottom: 6px;">
              <%= gallery.name %>
            </div>
          <% end %>
          <a href="#">
            <div class="widget--info__title product-color" style="font-size: 17px; line-height: 24px; color: #0669de;">
              <%= album.name %>
              <div class="widget--info__description mb-lg-0" style="font-size: 13px;line-height: 18px;letter-spacing: 0;color: #666666;">
                <%= gallery.methodology.description %>
              </div>
            </div>
            <!--
              <div class="widget--info__meta" style="position: absolute; bottom: 0; font-size: 11px; line-height: 15px; letter-spacing: 0; color: #939393; "><%= album.updated_at %></div>
            -->
          </a>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row ms-auto">
    <div class="col-12 flex-end">
      <p class="fs-14 fw-semibold text-rede-primary opacity-80">Conhe√ßa mais os trabalhos realizados nas comunidades feitos com cuidado e protagonismo local.</p>
      <%= link_to "Veja o acervo completo", material_path(gallery.name), class: 'btn btn-primary btn-sm rounded py-2 px-5', style: "font-weight: 700 !important", target: "_top" %>
    </div>
  </div>
<% end %>
