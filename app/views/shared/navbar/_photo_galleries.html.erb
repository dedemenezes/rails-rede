<%= turbo_frame_tag :nav_photo_galleries do %>
  <div class="row flex-columns p-3">
    <% nav_galleries.each do |gallery| %>
      <div class="col-12 border-bottom">
        <%= render NavLinkComponent.new(gallery.name, gallery_path(gallery, t: "imagens"), target: "_top") %>
      </div>
    <% end %>
  </div>
  <%if false  %>
    <ul class="nav flex-column align-items-start nav-pills nav-tabs border-bottom-0" id="myTab" role="tablist" style="height: 298px; overflow-y: auto;min-width: 276px">
      <li class="mb-lg-3 w-100">
        <%# target do tab conect com id do tab content pane %>
        <%#= render Dropdown::TabButtonComponent.new(gallery.name, id: "gallery-photos-#{gallery.id}-tab", target: "nav-gallery-photos-#{gallery.id}", is_active: false) %>
        <%= link_to gallery %>
      </li>
    </ul>
  <% end %>
<% end %>
