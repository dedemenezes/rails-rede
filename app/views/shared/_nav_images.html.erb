<%= turbo_frame_tag 'nav-images' do %>
  <!-- Nav tabs -->
  <div class="dropdown-pane position-relative ps-3 d-flex flex-columns justify-content-between pe-0" style="">
    <ul class="nav flex-nowrap flex-column align-items-start nav-pills nav-tabs border-bottom-0 pe-3" id="myTab" role="tablist" style="height: 298px; overflow-y: auto;min-width: 296px">

      <% nav_galleries.each do |gallery| %>
        <li class="mb-lg-3 w-100">
          <%# target do tab conect com id do tab content pane %>
          <%= render Dropdown::TabButtonComponent.new(gallery.name, id: "gallery-photos-#{gallery.id}-tab", target: "nav-gallery-photos-#{gallery.id}", is_active: false) %>
        </li>
      <% end %>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content flex-grow-1">
      <% nav_galleries.each_with_index do |gallery, index| %>
        <%# id turbo frame conecta com id da partial %>
        <%= render Dropdown::TabContentComponent.new(
          navbar_gallery_path(gallery.name, query: 'photos'),
          frame_id: "nav-gallery-photos-#{gallery.id}",
          aria_labelledby: "gallery-photos-#{gallery.id}-tab",
          index: index
        ) %>
      <% end %>
    </div>
  </div>
<% end %>
