<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= background_color %>">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand btn", style: 'background-color: black;' do %>
      <%= image_tag 'RO_simbolo-02.png' %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav flex-grow-1 justify-content-center">
        <li class="nav-item active">
          <%= link_to "About us", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Observatories", observatories_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Galleries", '#', class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "News", article_path(Article.first), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact us", '#', class: "nav-link" %>
        </li>
        <% if user_signed_in? && current_user.admin? %>
          <li class="nav-item">
            <%= link_to "Admin", rails_admin_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav navbar-social">
        <li class="nav-item">
          <%= link_to '#', class: 'nav-link fs-5' do %>
            <%= icon('fa-brands', 'square-facebook') %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to '#', class: 'nav-link fs-5' do %>
            <%= icon('fa-brands', 'square-instagram') %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to '#', class: 'nav-link fs-5' do %>
            <%= icon('fa-brands', 'square-youtube') %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
