<div class="container mt-3">
  <div class="row justify-content-center mt-2 mb-5">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center border border-info border-5 border-end-0 border-top-0 border-bottom-0 ps-4">
        <h1>Not√≠cias</h1>
        <button class="btn-icon">
          Filtros
          <%= image_tag 'filter-icon-2.png', width: '12px' %>
        </button>
      </div>
    </div>
  </div>

  <% if @has_articles %>
    <div class="articles__recent">
      <div class="row mb-4">
        <div class="col-12 col-md-6 article--main">
          <%#= raise %>
            <%= render 'article_card', article: @top_article, highlight: true %>
        </div>
        <div class="col-12 col-md-6">
          <div class="recents--layout">
            <% @recent_articles.each do |article| %>
                <%= link_to article_path(article), class: 'text-reset' do %>
                  <%= render 'article_card', article: article, highlight: false %>
                <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
      <% @articles.each do |article| %>
        <div class="col-12 col-sm-6 col-md-4 article--list">
          <%= link_to article_path(article), class: 'text-reset' do %>
            <%= render 'article_card', article: article, highlight: false %>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
  <% end %>

</div>
