<div class="container mt-3">
  <div class="row justify-content-center mt-2 mb-5">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center border border-info border-5 border-end-0 border-top-0 border-bottom-0 ps-4">
        <h1>Notícias</h1>
        <button class="btn-icon">
          Filtros
          <%= image_tag 'filter-icon-2.png', width: '12px' %>
        </button>
      </div>
    </div>
  </div>
  <div class="articles__recent">
    <div class="row">
      <div class="col-12 col-sm-6">
        <div class="article__card">
          <div class="card__image" style="background-image:url(<%= cl_image_path @top_article.banner.key %>);height: 405px;background-size: cover; background-position: center;"></div>
          <%#= cl_image_tag @top_article.banner.key, height: '405px' %>
          <div class="article__card__content">
            <div class="card__content__header d-flex justify-cotent-start gap-2">
              <small><%= @top_article.created_at.strftime('%d.%m.%Y') %></small>
              <%# <small>= @top_article.tags.first.name</small> %>
              <small class="tag">São Francisco</small>
              <small class="tag">Agricultores</small>
            </div>
            <h4 class="mb-0"><%= @top_article.header.truncate(45) %></h4>
            <p class="mb-0"><%= @top_article.sub_header.truncate(120) %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row">
          <% @recent_articles.each do |article| %>
            <div class="col-12 col-sm-6 mb-4">
              <%= link_to article_path(article), class: 'text-reset' do %>
                <div class="article__card">
                  <div class="card__image" style="background-image:url(<%= cl_image_path article.banner.key %>);height: 147px; background-size: cover; background-position: center;"></div>
                  <%#= cl_image_tag article.banner.key, height: '147px' %>
                  <div class="article__card__content">
                    <small><%= @top_article.created_at.strftime('%d.%m.%Y') %></small>
                    <div class="card__content__header d-flex justify-cotent-start gap-2">
                      <%# <small>= @top_article.tags.first.name</small> %>
                      <small class="tag">São Francisco</small>
                      <small class="tag">Agricultores</small>
                    </div>
                    <h5 class="mb-0"><%= @top_article.header.truncate(21) %></h5>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
