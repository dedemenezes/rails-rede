<%= form_with url: contacts_path, html: { class: '' } do |f| %>
  <div class="mb-3">
    <div class="row">
      <div class="col-6">
        <%= f.label 'Nome', id: :first_name, class: "form-label fw-semibold" %>
        <%= f.text_field :first_name, class: "form-control", aria: { describedby: 'firstName' } %>
      </div>
      <div class="col-6">
        <%= f.label 'Sobrenome', id: :last_name, class: "form-label fw-semibold"%>
        <%= f.text_field :last_name, class: "form-control", aria: { describedby: 'lastName' } %>
      </div>
    </div>
  </div>
  <div class="mb-3">
    <div class="row">
      <div class="col-12">
        <%= f.label 'Email', id: :email, class: "form-label fw-semibold" %>
        <%= f.text_field :email, class: "form-control", aria: { describedby: 'email' } %>
      </div>
    </div>
  </div>
  <div class="mb-3">
    <div class="row">
      <div class="col-12">
        <%= f.label 'Mensagem', id: :message, class: "form-label fw-semibold" %>
        <%= f.text_area :message, class: "form-control", style: 'height: 138px;', aria: { describedby: 'message' } %>
      </div>
    </div>
  </div>
  <div class="mb-3">
    <div class="row justify-content-center">
      <div class="col-6">
        <%= f.submit 'Enviar', class: 'btn btn-primary w-100' %>
      </div>
    </div>
  </div>
<% end %>
