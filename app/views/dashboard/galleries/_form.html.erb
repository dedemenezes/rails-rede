<%= simple_form_for([:dashboard, gallery]) do |f| %>
  <%= f.input :published %>
  <%= f.input :name %>
  <%= f.input :observatory, collection: Observatory.all, input_html: { data: { controller: 'tom-select' } } %>
  <%= f.input :category %>
  <%= f.submit gallery.new_record? ? 'Criar galeria' : 'Atualizar galeria', class: 'btn btn-primary' %>
<% end %>
