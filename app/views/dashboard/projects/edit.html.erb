<div class="card__dashboard border">
  <div class="dashboard__content p-3">
    <%= simple_form_for [:dashboard, @project], html: { class: 'px-3 py-2' } do |f| %>
      <div class="d-flex align-items-end justify-content-between">
        <%= f.input :name, required: true, wrapper_html: { style: 'margin-bottom: 0 !important' } %>
        <%= link_to 'Edit about', '#', class: 'btn-base' %>
      </div>
      <%#= f.rich_text_area :content %>
      <div class="d-flex alig-items-center justify-content-between">
        <%#= f.input :banner, as: :file, wrapper_html: { class: 'flex-grow-1' } %>
        <% if @project.banner.attached?  %>
          <%= image_tag @project.banner.blob.representation(resize_to_limit: [100, 100]), class: 'mx-2' %>
          <%= link_to 'remove', destroy_attachment_path(@project.banner.id), data: { turbo_method: 'delete' } %>
        <% end %>
      </div>
      <%= f.submit %>
    <% end %>

    <%#= render 'form', project: @project %>

  </div>
</div>
