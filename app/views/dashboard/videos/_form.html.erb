<%= simple_form_for [:dashboard, video] do |f| %>
  <%= f.input :name %>

  <%= f.input :description %>

  <%= f.input :url %>

  <%= f.input :published,
              input_html: { class: "tag-selector tag-selector--large", data: { action: 'change->publish-checkbox#updateHint', publish_checkbox_target: 'input'  } },
              wrapper_html: { class: 'tag-item', data: { controller: 'publish-checkbox', publish_checkbox_text_value: 'Publicar' } },
              label_html: { data: { publish_checkbox_target: 'label' } }
  %>

  <%= render 'dashboard/shared/form/submit_cancel', form: f,  element: video %>

<% end %>
