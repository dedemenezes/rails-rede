<%= simple_form_for([:dashboard, album], html: {data:{controller: 'photo-preview'}}) do |f| %>
  <%= f.input :name %>
  <%= f.association :gallery, value: album.gallery %>
  <div data-controller="display-photo-input">
    <%= f.input :is_event, label: 'Foi uma ação', input_html: { data: { display_photo_input_target: 'checkbox', action: 'change->display-photo-input#displayInput' } } %>
    <%= f.input :event_date, as: :string, input_html: { data: { controller: 'flatpickr' } },  wrapper_html: { class: 'box--anim box--hidden', data: { display_photo_input_target: 'input' } } %>
    <%= f.association :tags, input_html: { data: { controller: 'tom-select-create-option' } },  wrapper_html: { class: 'box--anim box--hidden', data: { display_photo_input_target: 'input' } } %>
  </div>
    <%= render 'dashboard/shared/form/banner_input', element: album, form: f %>
  <%= f.input :photos,
              as: :file,
              input_html: {
                multiple: true,
                class: 'd-none',
                data: {
                  photo_preview_target: "photoInput",
                  action: 'change->photo-preview#displayFilesCounter'
                }
              },
              label_html: {
                class: 'upload-photo',
                data: {
                  photo_preview_target: 'photoPreview'
                }
              },
              label: '🖇️ Selecione os arquivos' %>
    <%= render 'dashboard/shared/form/submit_cancel', element: album, form: f %>
<% end %>
