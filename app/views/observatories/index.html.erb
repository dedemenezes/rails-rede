<% content_for :meta_title, "Observatórios - #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_image, display_banner_as_background(@observatories.sample) %>

<div class="container">
  <div class="row justify-content-center mt-2 mb-5">
    <div class="col-12 mt-3">
      <div class="d-flex justify-content-between align-items-center border border-rede-primary-l border-info border-5 border-end-0 border-top-0 border-bottom-0 ps-4">
        <h1>Observatórios</h1>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="p-md-1">
    <div class="cards__observatories mb-4">
      <% @observatories.each do |observatory| %>
        <%= link_to observatory_path(observatory) do %>
          <div class="observatory__card">
            <%#= display_banner(observatory) %>
            <div style="background-image: url('<%= display_banner_as_background(observatory) %>'); height: 240px; background-size: cover; border-radius: 10px 10px 0 0; background-position: center;"></div>
            <p><%= observatory.name %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

</div>
