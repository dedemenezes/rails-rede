<div class="subtitle__wrapper" data-controller="reveal-on-click">
  <button class="btn btn-light mb-1 fw-semibold"  data-action="click->reveal-on-click#toggle" data-reveal-on-click-target="button">Legendas</button>
  <div class="subtitle hidden__el" data-reveal-on-click-target="dropdown">
    <div id="carouselExampleIndicators" class="carousel carousel-dark slide">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= render 'observatories/map_subtitle_polygon' %>
        </div>
        <div class="carousel-item">
          <%= render 'observatories/map_subtitle_pin' %>
        </div>
        <div class="carousel-item">
          <%= render 'observatories/map_subtitle_line' %>
        </div>
      </div>
    </div>
  </div>
</div>
