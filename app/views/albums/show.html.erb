<div class="container mt-5">
  <div class="row justify-content-center mt-2 mb-5">
    <div class="col-12 mt-5">
      <%= render 'shared/breadcrumbs' %>
      <div class="d-flex justify-content-between align-items-center border border-info border-5 border-end-0 border-top-0 border-bottom-0 ps-4">
        <h1><%= @album.name %></h1>
        <button class="btn-icon d-none d-md-block">
          Filtros
          <%= image_tag 'filter-icon-2.png', width: '12px' %>
        </button>
      </div>
    </div>
  </div>
  <div class="cards__index">
    <% @album.photos.each do |photo| %>
      <div class="card__index text-primary">
        <div style="background: url(<%= cl_image_path(photo.key) %>);background-size: cover;background-position: center; border-radius: 10px;"></div>
      </div>
    <% end %>
  </div>
</div>
